swiper{
  height: 100vw;
  overflow: hidden;
}

swiper image{
  width: 100vw;
}

.swiper_posi{
  position: absolute;
  top: 20rpx;
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  text-align: center;
}

.swiper_posi image{
  width: 70%;
  vertical-align: middle;
}

.po1{
  right: 120rpx;
}

.po2{
  right: 30rpx
}

.swiper_posi1{
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  top: 90vw;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  right: 30rpx;
  background: rgba(0, 0, 0, 0.5);
}

.view1{
  float: left;
  width: 90vw;
  margin: 0 5vw;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #e4e4e2;
}

.pText1{
  color: #fda800;
  font-size: 28rpx;
}

.pText2{
  color: #fda800;
  font-size: 37rpx;
  font-weight: bold;
}

.pText3{
  color: #a7a7a7;
  font-size: 28rpx;
}

.p2{
  font-size: 32rpx;
  line-height: 80rpx;
  font-weight: bold;
  color: #413412;
}

.view2{
  float: left;
  width: 90vw;
  margin: 0 5vw;
  padding: 20rpx 0;
  color: #332500;
}

.v2Left{
  float: left;
  width: 15%;
  font-size: 33rpx;
  margin-top: 10rpx;
}

.v2Left text,.v2Right>text{
  display: block;
}

.v2Right{
  float: left;
  width: 85%;
  font-size: 30rpx;
  line-height: 45rpx;
}

.v2Right image{
  width: 40rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

.dj{
  float: left;
  width: 100vw;
}

.djTit{
  font-size: 30rpx;
  display: block;
  line-height: 100rpx;
  color: #2d260c;
  text-indent: 5vw;
}

.djw{
  width: 100vw;
  overflow: auto;
  overflow-y: hidden;
}
.djw::-webkit-scrollbar {display:none}

.djx{
  width: 100000vw;
}

.djshop{
  float: left;
  width: 250rpx;
  padding-right: 20rpx;
}

.djshop:first-child{
  padding-left: 40rpx;
}

.djshop:last-child{
  padding-right: 40rpx;
}

.djshop>image{
  width: 100%;
  border-radius: 20rpx;
}
.djbadd{
  float: right;
  width: 35rpx;
}
.djshopTit{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.djbot{
  color: #fda800;
  padding: 10rpx 0;
}

