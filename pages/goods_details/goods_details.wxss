/* 底部 */
.bottom{
  float: left;
  width: 100vw;
  height: 9vh;
  background: #000;
}
.flooter{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 8vh;
  background: #fff;
  padding-top: 1vh;
}

.card{
  float: left;
  position: relative;
  margin-left: 5vw;
  margin-top: 20rpx;
}

.card text{
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  background: #ff5443;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.card image{
  width: 50rpx;
}

.fhui image{
  width: 30rpx;
  vertical-align: middle;
  margin-top: -16rpx;
}

.fhui{
  float: left;
  width: 70vw;
  background: #f2f1ed;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  line-height: 80rpx;
  margin-left: 7vw;
  padding-left: 5vw;
}
.fhui1{
  float: left;
  /* margin-top: 10rpx;  */
}
.addCard{
  float: right;
  background: #ffaa01;
  line-height: 80rpx;
  border-radius: 40rpx;
  width: 50%;
  text-align: center;

}
.fhui1>input{
  display: inline-block;
  width: 130rpx;
  padding: 0 10rpx;
  text-align: center;
  margin-top: 18rpx;
}
.v2rView{
  display: inline-block;
  background: #ffaa01;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  color: #fff;
  font-size: 28rpx;
}

.shareview{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.3);
  z-index: 3;
}

.share text{
  display: block
}

.share text:first-child{
margin-top: 14rpx;
}

.centerView{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100vw;
  text-align: center;
  margin-top: 20rpx;
  background: #fff;
  padding-top: 20rpx;
  z-index: 3;
}

.centerView view{
  flex: 1;
}

.shareImg{
  width: 50rpx;
  display: block;
  margin: 0 auto;
}

button::after {
  order: none;
  border: 0;
}

button {
  background-color: #fff;
  border: 0;
  padding: 0;
  line-height: 50rpx;
}

.button-hover{
  color: #fff;
}

.shareviewImg{
  width: 80vw;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}